<% form_for @login,  :url =>{ :action => :create}, :method => "post" do |f| %>
  <%# if f.error_messages %>
  <%= f.error_messages %>
  <%# end%>
  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password%>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit "Register" %>
  </p>
  <% end %>